<!DOCTYPE html>
<html lang="en">
  <head>
  <title>Soundify!! Spice it up!!</title>

  <meta property="og:url"           content="http://www.your-domain.com/your-page.html" />
  <meta property="og:type"          content="website" />
  <meta property="og:title"         content="Soundify" />
  <meta property="og:description"   content="Spice it up!!" />
  <meta property="og:image"         content="https://cdn4.iconfinder.com/data/icons/defaulticon/icons/png/256x256/media-volume-2.png" />

	<link rel="stylesheet" href="/stylesheets/style.css" type="text/css"/>
	<link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
  </head>

  <body>
	<div id="wrapper" class="wrapper">

		<h1><%= soundify.title %></h1><br>

    <div class="itemWrapper videoWrapper">

      <h2>VIDEO TRACK</h2>
      <input type="hidden" id="videoType" value="<%= soundify.videoType %>">
      <input type="hidden" id="videoSeconds" value="<%= soundify.videoSeconds %>">

  		<div id="player1" class="player1"></div>
      <label>URL: </label><a href="<%= soundify.videoURL %>" target="_blank"><label id="videoUrl"><%= soundify.videoURL %></label></a><br>
    </div>



    <!-- AddToAny BEGIN -->
    <div style="width: 100%; display: table;">
      <div style=" height: 35px; display: table-row">
        <div style="width: 150px; display: table-cell; vertical-align: middle;">
          <label class="lblShare">share it:</label>
        </div>
        <div style="display: table-cell;">
          <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
            <a class="a2a_dd" href="https://www.addtoany.com/share?linkurl=https%3A%2F%2Fsoundifyit.herokuapp.com%2F&amp;linkname=Soundify"></a>
            <a class="a2a_button_facebook"></a>
            <a class="a2a_button_twitter"></a>
            <a class="a2a_button_google_plus"></a>
            <a class="a2a_button_reddit"></a>
            <a class="a2a_button_whatsapp"></a>
          </div>
       </div>
     </div>
   </div>
    <!-- AddToAny END -->



    <div class="itemWrapper soundWrapper">
      <h2>AUDIO TRACK</h2>
      <input type="hidden" id="soundType" value="<%= soundify.soundType %>">
      <input type="hidden" id="soundSeconds" value="<%= soundify.soundSeconds %>">

      <div id="player2" class="player2"></div>
      <label>URL: </label><a href="<%= soundify.soundURL %>" target="_blank"><label id="soundUrl"><%= soundify.soundURL %></label></a><br>
    </div>
	</div>
  <script type="text/javascript">
  var a2a_config = a2a_config || {};
  a2a_config.linkname = "Soundify";
  a2a_config.linkurl = "https://soundifyit.herokuapp.com/";
  </script>
  <script type="text/javascript" src="//static.addtoany.com/menu/page.js"></script>
  <script src="/javascripts/jquery.min.js"></script>
	<script src="/javascripts/jsShow.js"></script>
  </body>
</html>
